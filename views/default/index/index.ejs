</div>
<!-- end banner_x -->


<div class="banner_y center">
    <!--左侧导航开始 -->
    <div class="nav">
        <ul>
            <% for(var i = 0;i < goodsCate.length;i++){ %>
            <li>
                <% if(goodsCate[i].link != ""){ %>
                <a href="<%= goodsCate[i].link %>" target=""><%= goodsCate[i].title %></a>
                <% }else{ %>
                <a href="/category/<%= goodsCate[i]._id %>"><%= goodsCate[i].title %></a>
                <% } %>
                <div class="pop">
                    <ol class="cate_list clear">
                        <% for(var j = 0;j < goodsCate[i].items.length;j++){ %>
                        <li>
                            <div class="xuangou_left">
                                <% if(goodsCate[i].items[j].link != ""){ %>
                                <a href="<%= goodsCate[i].items[j].link %>" target="">
                                    <div class="img fl"><img src="<%= goodsCate[i].items[j].cate_img %>"
                                                             alt="<%= goodsCate[i].items[j].title %>"></div>
                                    <span class="fl"><%= goodsCate[i].items[j].title %></span>
                                </a>
                                <% }else{ %>
                                <a href="/category/<%= goodsCate[i].items[j]._id %>">
                                    <div class="img fl"><img src="<%= goodsCate[i].items[j].cate_img %>"
                                                             alt="<%= goodsCate[i].items[j].title %>"></div>
                                    <span class="fl"><%= goodsCate[i].items[j].title %></span>
                                </a>
                                <% } %>
                            </div>

                        </li>
                        <% } %>
                    </ol>
                </div>
            </li>
            <% } %>
        </ul>
    </div>

    <!--左侧导航开始 -->

    <div class="swiper-container">
        <div class="swiper-wrapper">

            <% for(var i = 0;i < focus.length;i++){ %>
            <div class="swiper-slide">
                <a href="<%= focus[i].link %>" target="">
                    <img src="/<%= focus[i].focus_img %>" alt="<%= focus[i].title %>"/>
                </a>
            </div>
            <% } %>

        </div>
        <!-- Add Arrows -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>

</div>
<!-- end banner -->

