<%- include ../public/page_header.ejs %>

<div class="container-fluid">
    <div class="row">

        <div class="panel panel-default">
            <div class="panel-heading">
                Edit Big Category
            </div>
            <div class="panel-body">
                <div class="table-responsive input-form">
                    <form action="/<%= config.adminPath %>/goodsType/doEdit" method="post">
                        <ul>
                            <input type="hidden" name="_id" value="<%= list._id %>">
                            <li>Title:<input type="text" name="title" value="<%= list.title %>"/></li>
                            <li>
                                Description:
                                <textarea name="description" id="" cols="60" rows="8"><%= list.description %></textarea>
                            </li>
                            <li>
                                <br/>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </li>
                        </ul>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>