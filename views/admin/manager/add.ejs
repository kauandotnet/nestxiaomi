<%- include('../public/page_header'); %>

<div class="container-fluid">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        add manager
      </div>
      <div class="panel-body">
        <div class="table-responsive input-form">
          <form action="/<%= config.adminPath %>/manager/doAdd" method="POST">
            <ul>
              <li> 管理员名称: <input type="text" name="username" /></li>
              <li> 管理员密码: <input type="password" name="password" /></li>
              <li> 管理员电话: <input type="text" name="mobile" /></li>
              <li> 管理员邮箱: <input type="text" name="email" /></li>
              <li> 管理员角色:
                <select name="role_id" id="role_id">
                  <% for (let i = 0; i < roleList.length; i++) { %>
                    <option value="<%= roleList[i]._id %>"><%= roleList[i].title %></option>
                  <% } %>
                </select>
              </li>
              <li>
                <br />
                <button type="submit" class="btn btn-default">Submit</button>
              </li>
            </ul>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

</body>

</html>