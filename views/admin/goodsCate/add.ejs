<%- include ../public/page_header.ejs %>

<div class="container-fluid">
    <div class="row">

        <div class="panel panel-default">
            <div class="panel-heading">
                Add Category
            </div>
            <div class="panel-body">
                <div class="table-responsive input-form">
                    <form action="/<%= config.adminPath %>/goodsCate/doAdd" method="post" enctype="multipart/form-data">
                        <ul>
                            <li><span>Title:</span> <input type="text" name="title" class="input"/></li>
                            <li><span>Belongs to:</span>
                                <select name="pid" id="pid">
                                    <option value="0">Top Catogory</option>
                                    <% for(var i = 0;i < cateList.length;i++){ %>
                                        <option value="<%= cateList[i]._id %>"><%= cateList[i].title %></option>
                                    <% } %>
                                </select>
                            </li>
                            <li><span>Img:</span> <input type="file" name="cate_img"/></li>
                            <!--                            <li><span>URL:</span> <input type="text" name="link" class="input"/></li>-->
                            <!--                            <li><span>Template:</span> <input type="text" name="template"-->
                            <!--                                                          class="input"/><span>空表示默认模板</span></li>-->
                            <!--                            <li><span>Seo title:</span> <input type="text" name="sub_title" class="input"/></li>-->
                            <!--                            <li><span>Seo keywords:</span><input type="text" name="keywords" class="input"/></li>-->
                            <!--                            <li><span>Seo description:</span> <textarea name="description" id="description" cols="84"-->
                            <!--                                                              rows="4"></textarea></li>-->
                            <li><span>Sort:</span> <input type="text" name="sort"/></li>
                            <li><span>Status:</span> <input type="radio" name="status" checked value="1" id="a"/> <label
                                        for="a">Show</label> <input type="radio" name="status" value="0" id="b"/><label
                                        for="b">Hidden</label> 　
                            </li>
                            <li>
                                <br/>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </li>
                        </ul>
                    </form>
                </div>
            </div>


        </div>

    </div>
</div>

</body>
</html>