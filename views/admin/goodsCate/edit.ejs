<%- include ../public/page_header.ejs %>

<div class="container-fluid">
    <div class="row">

        <div class="panel panel-default">
            <div class="panel-heading">
                Edit Category
            </div>
            <div class="panel-body">
                <div class="table-responsive input-form">
                    <form action="/<%= config.adminPath %>/goodsCate/doEdit" method="post"
                          enctype="multipart/form-data">
                        <ul>
                            <input type="hidden" name="_id" value="<%= list._id %>"/>
                            <li><span>Title:</span> <input type="text" name="title" class="input"
                                                           value="<%= list.title %>"/></li>

                            <li><span>Belongs to:</span>
                                <select name="pid" id="pid">
                                    <option value="0">Top Category</option>
                                    <% for(var i = 0;i < cateList.length;i++){ %>
                                        <option value="<%= cateList[i]._id %>"
                                        <% if(cateList[i]._id.toString() == list.pid.toString()){ %> selected
                                                <% } %>
                                        ><%= cateList[i].title %></option>
                                    <% } %>
                                </select>
                            </li>

                            <li><span>Img:</span> <input type="file" name="cate_img"/>
                                <br/>
                                <span> </span>
                                <% if(list.cate_img){ %>
                                    <img class="pic" src="/<%= list.cate_img %>"/>
                                <% } %>
                            </li>

                            <!--                            <li><span>Jumb URL:</span> <input type="text" name="link" class="input"-->
                            <!--                                                          value="<%= list.link %>"/></li>-->

                            <!--                            <li><span>Template:</span> <input type="text" name="template" class="input"-->
                            <!--                                                          value="<%= list.template %>"/><span>空表示默认模板</span></li>-->

                            <!--                            <li><span>Seo title:</span> <input type="text" name="sub_title" class="input"-->
                            <!--                                                           value="<%= list.sub_title %>"/></li>-->

                            <!--                            <li><span>Seo keywords: </span><input type="text" name="keywords" class="input"-->
                            <!--                                                            value="<%= list.keywords %>"/></li>-->

                            <!--                            <li><span>Seo description:</span> <textarea name="description" id="description" cols="84"-->
                            <!--                                                              rows="4"><%= list.description %></textarea></li>-->

                            <li><span>Sort:</span> <input type="text" name="sort" value="<%= list.sort %>"/></li>
                            <li><span>Status:</span>
                                <input type="radio" name="status"
                                <% if(list.status == 1){ %> checked
                                        <% } %>
                                       value="1" id="a"/>
                                <label for="a">Show</label>
                                <input type="radio"
                                <% if(list.status == 0){ %> checked
                                        <% } %>
                                       name="status" value="0" id="b"/>
                                <label for="b">Hide</label> 　
                            </li>
                            <li>
                                <br/>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </li>
                        </ul>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>