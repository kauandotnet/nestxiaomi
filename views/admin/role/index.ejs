<%- include ../public/page_header.ejs %>

<div class="container-fluid">
    <div class="row">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                <tr class="th">
                    <th>Title</th>
                    <th>Description</th>
                    <th>Add Time</th>
                    <th class="text-center">Operation</th>
                </tr>
                </thead>
                <tbody>
                <% for(var i = 0;i < roleList.length;i++){ %>
                    <tr>
                        <td><%= roleList[i].title %></td>
                        <td><%= roleList[i].description %></td>
                        <td><%= helper.formatTime(roleList[i].add_time) %></td>
                        <td class="text-center"><a
                                    href="/<%= config.adminPath %>/role/auth?id=<%= roleList[i]._id %>">Auth</a> 　<a
                                    href="/<%= config.adminPath %>/role/edit?id=<%= roleList[i]._id %>">Modify</a> 　<a
                                    class="delete"
                                    href="/<%= config.adminPath %>/role/delete?id=<%= roleList[i]._id %>">Delete</a>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>

        </div>
    </div>
</div>

</body>
</html>