<%- include ../public/page_header.ejs %>

<div class="container-fluid">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                Edit Role
            </div>
            <div class="panel-body">
                <div class="table-responsive input-form">
                    <form action="/<%= config.adminPath %>/role/doEdit" method="post">
                        <ul>
                            <input type="hidden" name="_id" value="<%= roleList._id %>"/>
                            <li>Title: <input type="text" name="title" value="<%= roleList.title %>"/></li>
                            <li>
                                Description:
                                <textarea name="description" id="" cols="60"
                                          rows="8"><%= roleList.description %></textarea>
                            </li>
                            <li>
                                <br/>
                                <button type="submit" class="btn btn-default">Submit</button>
                            </li>
                        </ul>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>