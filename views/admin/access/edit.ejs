<%- include('../public/page_header'); %>

<div class="container-fluid">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        edit role
      </div>
      <div class="panel-body">
        <div class="table-responsive input-form">
          <form action="/<%= config.adminPath %>/role/doEdit" method="POST">
            <input type="hidden" name="_id" value="<%= roleList._id %>">
            <ul>
              <li> 角色名称: <input type="text" name="title" value="<%= roleList.title %>" /></li>
              <li>
                角色描述:
                <textarea name="description" id="" cols="60" rows="8"><%= roleList.description %></textarea>
              </li>
              <li>
                <br />
                <button type="submit" class="btn btn-default">Submit</button>
              </li>
            </ul>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

</body>

</html>